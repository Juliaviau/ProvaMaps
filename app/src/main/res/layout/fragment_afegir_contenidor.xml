<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfegirContenidorFragment"
    android:background="@color/fons">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout global. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- LinearLayout de la capçalera. Conté títol i botó de cancelar. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/fons_titol">

                <TextView
                    android:id="@+id/tv_TitolAfegirContenidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Afegir un contenidor"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/boto_tancar_afegir_contenidor"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/cancelar2"
                    android:text="Cancelar"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- LinearLayout que conté el contingut de l'imatge-->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_penjaImatgeContenidor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Penja una imatge:" />

                <TextView
                    android:id="@+id/tv_descPenjaImatgeContenidor"
                    android:layout_marginHorizontal="12dp"
                    android:textStyle="italic"
                    android:textSize="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fes una imatge al contenidor on es vegi correctament. Procura fer-la des de la distància correcte, ni molt aprop ni molt lluny. I amb una bona il·luminació." />

                <ImageView
                    android:id="@+id/iv_imatgeAfegirContenidor"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@drawable/photo_2024_05_09_19_50_35"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="14dp"
                    android:background="@color/fons_titol"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Afegir imatge"
                    android:layout_marginHorizontal="10dp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:id="@+id/boto_afegirImatgeContenidor"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.51dp"
                android:layout_marginVertical="10dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tv_caracteristiquesAfegirContenidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Característiques:" />

            <TextView
                android:id="@+id/tv_descCaracteristiquesAfegirContenidor"
                android:layout_marginHorizontal="12dp"
                android:textStyle="italic"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Escull les opcions de cada categoria segons com sigui la zona de contenidors." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Tipus de contenidor"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingStart="20dp"
                android:layout_marginTop="12dp"
                android:textSize="16dp"/>

            <!-- Envasos lleugers (contenidor groc)
Vidre (contenidor verd)
Paper i cartró (contenidor blau)
Matèria orgànica (contenidor marró)
Tèxtils (contenidor carbassa)
Rebuig (contenidor gris) -->

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_contenidorvidreAfegirContenidor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        tools:src="@tools:sample/avatars" />
                    <CheckBox
                        android:id="@+id/cb_contenidorvidreAfegirContenidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vidre" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_contenidorpaperAfegirContenidor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        tools:src="@tools:sample/avatars" />
                    <CheckBox
                        android:id="@+id/cb_contenidorpaperAfegirContenidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paper i cartró" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_contenidorenvasosAfegirContenidor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        tools:src="@tools:sample/avatars" />
                    <CheckBox
                        android:id="@+id/cb_contenidorenvasosAfegirContenidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Envasos" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_contenidorrobaAfegirContenidor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars" />
                <CheckBox
                    android:id="@+id/cb_contenidorrobaAfegirContenidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roba" />
            </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_contenidororganicAfegirContenidor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars" />
                <CheckBox
                    android:id="@+id/cb_contenidororganicAfegirContenidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orgànic" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_contenidorrebuigAfegirContenidor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        tools:src="@tools:sample/avatars" />
                    <CheckBox
                        android:id="@+id/cb_contenidorrebuigAfegirContenidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rebuig" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_contenidorpapereraAfegirContenidor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars" />
                <CheckBox
                    android:id="@+id/cb_contenidorpapereraAfegirContenidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paperera" />
        </LinearLayout>






            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tggb_lavaboContenidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_gravity="center"
                app:checkedButton="@id/boto_tggb_lavaboTipusHomeDona"
                app:singleSelection="false">

                <Button
                    android:id="@+id/boto_tggb_lavaboTipusNado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/icona_canviarnado"
                    style="?attr/materialButtonOutlinedStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"
                    app:iconSize="32dp"/>

                <Button
                    android:id="@+id/boto_tggb_lavaboTipusHomeDona"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/icona_lavabo"
                    style="?attr/materialButtonOutlinedStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"
                    app:iconSize="32dp"/>

                <Button
                    android:id="@+id/boto_tggb_lavaboTipusDona"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/icona_dona"
                    style="?attr/materialButtonOutlinedStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"
                    app:iconSize="32dp"/>

                <Button
                    android:id="@+id/boto_tggb_lavaboTipusHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/icona_home"
                    style="?attr/materialButtonOutlinedStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"
                    app:iconSize="32dp"/>

                <Button
                    android:id="@+id/boto_tggb_lavaboTipusAccesible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:icon="@drawable/icona_accesible"
                    style="?attr/materialButtonOutlinedStyle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"
                    app:iconSize="32dp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.51dp"
                android:layout_marginVertical="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_localitzacioAfegirContenidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textSize="16dp"
                android:text="Localització del contenidor:" />

            <TextView
                android:id="@+id/tv_descLocalitzacioAfegirContenidor"
                android:layout_marginHorizontal="12dp"
                android:textStyle="italic"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="El mapa indica la posició on guardarà el contenidor. Si és incorrecte, prem cancelar i torna-ho a intentar." />

            <ImageView
                android:id="@+id/iv_mapaLocalitzacioAfegirContenidor"
                android:src="@drawable/mapafont"
                android:layout_width="320dp"
                android:layout_marginTop="14dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/boto_afegir_afegirContenidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginVertical="20dp"
                android:text="Afegir" />




        </LinearLayout>
    </ScrollView>
</FrameLayout>