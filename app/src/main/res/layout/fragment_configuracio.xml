<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fons"
    tools:context=".ConfiguracioFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adadsd"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btntancarsessio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tancar sessio"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tancar sessió"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/icona_tancar_sessio"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_tancar_sessio"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tancar sessió"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/icona_tancar_sessio"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_eliminar_compte"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar compte"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/icona_prohibit"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
