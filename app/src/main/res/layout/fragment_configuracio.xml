<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fons"
    tools:context=".ConfiguracioFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aparenca"
        android:textColor="@color/black"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_canvi_mode_color"
        app:cardBackgroundColor="@color/materialCardView"

        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mode_app"
            android:text="@string/canvi_mode_fosc"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:drawableTint="@color/coloricones"
            android:drawableStart="@drawable/icona_mode_clar"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_canvi_idioma"
        app:cardBackgroundColor="@color/materialCardView"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/canvi_idioma"
            android:textSize="16dp"
            android:drawableTint="@color/coloricones"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/icona_idioma"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sessio_google"
        android:textColor="@color/black"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_tancar_sessio"
        app:cardBackgroundColor="@color/materialCardView"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tancar_sessio"
            android:gravity="center_vertical"
            android:drawableTint="@color/coloricones"
            android:textSize="16dp"
            android:drawableStart="@drawable/icona_tancar_sessio"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/mcb_eliminar_compte"
        app:cardBackgroundColor="@color/materialCardView"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/eliminar_compte"
            android:drawableTint="@color/coloricones"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/icona_prohibit"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/altres"
        android:textColor="@color/black"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/materialCardView"
        android:id="@+id/mcb_faqs"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faqs"
            android:gravity="center_vertical"
            android:drawableTint="@color/coloricones"
            android:textSize="16dp"
            android:drawableStart="@drawable/icona_informacio"
            android:drawableEnd="@drawable/icona_seguent"
            android:drawablePadding="10dp"/>
    </com.google.android.material.card.MaterialCardView-->

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>