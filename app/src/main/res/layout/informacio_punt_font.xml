<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_search_view">

    <TextView
        android:id="@+id/infoPunt_tipus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Font"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/infoPunt_anar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_mostrar_fotoFont"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Imagen"
            app:srcCompat="@drawable/font3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoPunt_Titoladreca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Adreça:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/infoPunt_adreca"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:ellipsize="end"
                android:paddingStart="4dp"
                android:text="Jardins de Vicenç Albert Ballester i Camps"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/infoPunt_InfoAdreca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informació:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/infoPunt_extra1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingStart="4dp"
                android:textSize="16sp"
                android:text="Potable"
                android:textColor="#000" />

            <TextView
                android:id="@+id/infoPunt_extra2"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:paddingStart="4dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="En servei"
                android:textColor="#000" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/infoPunt_anar"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="4dp"
        android:text="Anar-hi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
