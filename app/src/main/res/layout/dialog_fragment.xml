<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_fragment_style"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/cancelar2"
                android:layout_marginBottom="8dp"
                android:text="Atenci贸"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icona_tancar"
                android:background="@android:color/transparent"
                android:id="@+id/btn_creu_dialog"
                android:gravity="right"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="italic"
            android:textColor="#605C5C"
            android:text="Per a accedir a aquesta part de l'aplicaci贸 s'ha de tenir un compte. Inicia sessi贸 ara, o torna al mapa."/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="Tornar al mapa"
                android:backgroundTint="@color/blau_boto_dialog"
                android:id="@+id/btn_tornamapa"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="Iniciar sessi贸"
                android:backgroundTint="@color/blau_boto_dialog"
                android:id="@+id/btn_signup"/>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>